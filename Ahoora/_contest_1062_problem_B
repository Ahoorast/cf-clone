#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int n, sz = 0;
	cin >> n;
	if (n == 1)
		return cout << "1 0\n", 0;
	vector<int> p, cnt;
	for (int i = 2; 1LL * i * i <= n; i++)
		if (n % i == 0) {
			int t = 0;
			p.push_back(i);
			while (n % i == 0)
				n /= i, t++;
			cnt.push_back(t);
			sz++;
		}
	if (n > 1)
		cnt.push_back(1), p.push_back(n), sz++;
	int ans = 1;
	for (int i = 0; i < sz; i++)
		ans *= p[i];
	cout << ans << ' ';
	sort(cnt.begin(), cnt.end());
	int mx = 1;
	ans = 0;
	while (mx < cnt[sz - 1])
		mx *= 2, ans++;
	if (cnt[0] != mx)
		ans++;
	cout << ans << '\n';
	return 0;
}
