#include <bits/stdc++.h>
using namespace std;
 
const int N = 2 * 1000 * 100 + 10;
int h[N], cnt[N], n, K;
Â 
int main() {
	ios_base::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	cin >> n >> K;
	int mn = 1 << 30;
	for (int i = 1; i <= n; i++)
		cin >> h[i], cnt[h[i]]++, mn = min(mn, h[i]);
	for (int i = N - 2; i >= 0; i--)
		cnt[i] += cnt[i + 1];
	int t = 0, r = N - 2, ans = 0, x = 0;
	for (; r >= mn + 1; r--) {
		x += cnt[r];
		if (x + cnt[r - 1] > K)
			ans++, x = 0;
	}
	if (x)
		ans++;
	cout << ans << endl;
	return 0;
}
