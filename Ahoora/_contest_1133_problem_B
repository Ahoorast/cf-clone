#include <bits/stdc++.h>
using namespace std;
Â 
const int N = 200;
int n, cnt[N], K;
Â 
int main() {
	ios_base::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	cin >> n >> K;
	int d;
	for (int i = 1; i <= n; i++)
		cin >> d, cnt[d % K]++;
	int ans = 0;
	ans += cnt[0] / 2;
	for (int i = 1, j = K - 1; i <= j; i++, j--)
		if (i == j)
			ans += cnt[i] / 2;
		else
			ans += min(cnt[i], cnt[j]);
	cout << ans * 2 << endl;
	return 0;
}
