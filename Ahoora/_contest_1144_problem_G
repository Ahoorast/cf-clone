#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int n;
	cin >> n;
	vector<int> a(n);
	for (int i = 0; i < n; i++)
		cin >> a[i];
	int inc = -1, dec = 1 << 30;
	for (int i = 0; i < n; i++)
		if (inc < a[i] && (a[i] >= dec || a[i] < a[i + 1]))
			 inc = a[i], a[i] = 0;
		else if (dec > a[i])
			dec = a[i], a[i] = 1;
		else
			return cout << "NO\n", 0;
	cout << "YES\n";
	for (int i = 0; i < n; i++)
		cout << a[i] << ' ';
	cout << '\n';
	return 0;
}
