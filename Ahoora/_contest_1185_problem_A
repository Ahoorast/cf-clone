#include <bits/stdc++.h>
using namespace std;
Â 
int main() {
 	ios_base:: sync_with_stdio(false), cin.tie(0), cout.tie(0);
	long long arr[5];
	unsigned long long res = 0;
	for (int i = 0; i < 4; i++)
		cin >> arr[i];
	sort(arr, arr + 3);
	for (int i = 1; i < 3; i++) {
		long long tmp = arr[3] - abs(arr[i] - arr[i - 1]);
		if (tmp > 0)
			res += tmp;
	}
	cout << res << endl;
 	return 0;
}
