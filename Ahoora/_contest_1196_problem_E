#include <bits/stdc++.h>
using namespace std;
Â 
int main() {
	ios_base::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int c[2] = {};
		cin >> c[0] >> c[1];
		swap(c[0], c[1]);
		if (4 + 3 * (c[0] - 1) >= c[1] || 4 + 3 * (c[1] - 1) >= c[0]) {
			if (4 + 3 * (c[0] - 1) >= c[1] && c[1] >= c[0]) {
				cout << "YES" << endl;
				int x = 2, y = 2;
				while (c[0]--) 
					cout << x << ' ' << y << endl << x + 1 << ' ' << y << endl, x += 2, c[1]--;
				if (c[1] > 0)
					cout << 1 << ' ' << 2 << endl, c[1]--;
				x = 2, y = 2;
				while (c[1]) {
					cout << x << ' ' << y + 1 << endl, c[1]--;
					if (c[1])
						cout << x << ' ' << y - 1 << endl, c[1]--;
					x += 2;
				}
			}
			else if (c[0] >= c[1] && 4 + 3 * (c[1] - 1) >= c[0]) {
				cout << "YES" << endl;
				swap(c[0], c[1]);
				int x = 3, y = 2;
				while (c[0]--) 
					cout << x  << ' ' << y << endl << x + 1 << ' ' << y << endl, x += 2, c[1]--;
				if (c[1] > 0)
					cout << 2 << ' ' << 2 << endl, c[1]--;
				x = 3, y = 2;
				while (c[1]) {
					cout << x << ' ' << y + 1 << endl, c[1]--;
					if (c[1])
						cout << x << ' ' << y - 1 << endl, c[1]--;
					x += 2;
				}
			}
			else
				cout << "NO" << endl;
		}
		else
			cout << "NO" << endl;
	}
	return 0;
}
