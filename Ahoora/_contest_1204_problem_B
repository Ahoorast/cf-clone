#include <bits/stdc++.h>
using namespace std;
int main()
{
	unsigned long long n, ans = 0, l, r;
	cin >> n >> l >> r;
	unsigned long long ans1 = pow(2, l) - 1 + n - l;
	unsigned long long ans2 = pow(2, r) - 1 + (n - r) * pow(2, r - 1);
	cout << ans1 << " " << ans2;
	return 0;
}
