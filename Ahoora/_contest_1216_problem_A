#include <bits/stdc++.h>
using namespace std;
Â 
int main() {
	ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
	string s;
	int n, res = 0;
	cin >> n >> s;
	for (int i = 1; i < n; i += 2)
		if (s[i] == s[i - 1]) 
			res++, (s[i] == 'b'? s[i] = 'a': s[i] = 'b');
	cout << res << endl << s;
	return 0;
}
