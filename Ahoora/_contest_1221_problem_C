const int N = 1000 * 100 + 100;
int n, a[N], b[N], ex[N];
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int c, m, x;
		cin >> c >> m >> x;
		int d = min({c, m, x});
		c -= d, m -= d, x -= d;
		cout << d + min({(c + m) / 3, m, c}) << endl;
	}
	return 0;
}
