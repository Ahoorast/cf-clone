#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	long long cnt[2] = {0, 0}, n, a, x = 0;
	cin >> n;
	for (int i = 0; i < n; i++) {
		cin >> a;
		cnt[i & 1] += a / 2;
		cnt[!(i & 1)] += (a + 1) / 2;
	}
	cout << min(cnt[0], cnt[1]) << endl;
	return 0;
}
