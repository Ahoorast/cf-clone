#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long a, b, d, t = 1, cnt = 0;
		cin >> a >> b;
		if (a > b)
			swap(a, b);
		d = b - a;
		while (d > 0)
			d -= t, t++, cnt++;
		cout << (d & 1? cnt + (cnt & 1? 2: 1): cnt) << endl;
	}
	return 0;
}
