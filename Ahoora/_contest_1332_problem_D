#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int d, ans[10][10] = {0};
	cin >> d;
	int R = 0;
	for (int i = 0; i < 30; i++)
		if ((1 << i) & d)
			R = i;
	if (d == 0)
		return cout << "1 1\n 1\n", 0;
	ans[1][1] = ans[2][4] = d + (1 << (R + 1));
	ans[1][2] = ans[1][3] = ans[1][4] = ans[3][4] = ans[4][4] = d;
	ans[2][1] = ans[2][2] = ans[2][3] = 1 << (R + 1);
	cout << "4 4\n";
	for (int i = 1; i <= 4; i++, cout << '\n')
		for (int j = 1; j <= 4; j++)
			cout << ans[i][j] << ' ';
	return 0;
}
