#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		cin >> n;
		if (n % 4 == 0) {
			cout << "YES" << endl;
			for (int i = 1; i <= n / 2; i++)
				cout << 2 * i << ' ';
			for (int i = 1; i < n / 2; i++)
				cout << 2 * i - 1 << ' ';
			cout << n / 2 - 1 + n << endl;
		}
		else
			cout << "NO" << endl;
	}
	return 0;
}
