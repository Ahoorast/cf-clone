#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long n, k, t;
		bool p = true;
		cin >> n >> k;
		t = n;
		for (int i = 2; 1LL * i * i <= n; i++)
			if (n % i == 0)
				t = min(t, 1LL * i), p = false;
		cout << n + (k - 1) * 2 + t << endl;
	}
	return 0;
}
