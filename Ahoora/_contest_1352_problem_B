#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n, k;
		cin >> n >> k;
		int t1 = k - 1, t2 = (k - 1) * 2;
		if (n - t1 > 0 && (n - t1) % 2 == 1) {
			cout << "YES" << endl;
			for (int i = 1; i < k; i++)
				cout << 1 << ' ';
			cout << n - t1 << endl;
		}
		else if (n - t2 > 0 && (n - t2) % 2 == 0) {
			cout << "YES" << endl;
			for (int i = 1; i < k; i++)
				cout << 2 << ' ';
			cout << n - t2 << endl;
		}
		else
			cout << "NO" << endl;
	}
	return 0;
}
