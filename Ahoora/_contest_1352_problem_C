#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long n, k;
		cin >> n >> k;
		long long x = (k / (n - 1));
		if (k % (n - 1) == 0)
			cout << x * n - 1 << endl;
		else
			cout << x * n + (k % (n - 1)) << endl;
	}
	return 0;
}
