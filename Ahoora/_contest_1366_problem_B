#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n, x, m;
		cin >> n >> x >> m;
		int l, r, L = x, R = x;
		for (int i = 1; i <= m; i++) {
			cin >> l >> r;
			if (r >= L)
				L = min(L, l);
			if (l <= R)
				R = max(R, r);
		}
		cout << R - L + 1 << '\n';
	}
	return 0;
}
