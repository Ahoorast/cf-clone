#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	int Q;
	cin >> Q;
	while (Q--) {
		vector<int> vec;
		string s;
		int n, ans = 0;
		cin >> n >> s;
		bool c1 = true;
		for (int i = 1; i < n; i++)
			c1 &= s[i] == s[i - 1];
		if (c1) 
			cout << (n + 2) / 3 << '\n';
		else {
			int l = 0, r = n - 1, t = 0;
			while (l < r) {
				if (s[l] == s[0])
					l++, t++;
				if (s[r] == s[0] && l < r)
					r--, t++;
				if (s[l] != s[0] && s[r] != s[0])
					break;
			}
			ans += t / 3, t = 1;
			for (int i = l + 1; i <= r; i++) {
				if (s[i] == s[i - 1])
					t++;
				if (s[i] != s[i - 1] || i == r) {
					ans += t / 3;
					t = 1;
				}
			}
			cout << ans << '\n';
		}
	}
	return 0;
}
