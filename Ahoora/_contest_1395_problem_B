#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int n, m, x, y;
	cin >> n >> m >> x >> y;
	vector<pair<int, int>> ans;
	x--, y--;
	for (int i = 0; i < n; i++) {
		ans.push_back({x, y});
		for (int j = 1; j < m; j++) {
			int ny = (y + 1) % m;
			ans.push_back({x, ny});
			y = ny;
		}
		x++, x %= n;
	}
	for (auto it: ans)
		cout << it.first + 1 << ' ' << it.second + 1 << '\n';
	return 0;
}
