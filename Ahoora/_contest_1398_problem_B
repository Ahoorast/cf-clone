#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		string s;
		cin >> s;
		vector<int> vec;
		int cnt = 0, n = (int)(s.size());
		for (int i = 0; i < n; i++) {
			if (s[i] == '1')
				cnt++;
			if (s[i] == '0' || i == n - 1) 
				vec.push_back(cnt), cnt = 0;
		}
		sort(vec.begin(), vec.end());
		int sz = (int)(vec.size());
		int ans = 0;
		for (int i = sz - 1; i >= 0; i -= 2)
			ans += vec[i];
		cout << ans << '\n';
	}
	return 0;
}
