#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int a[3], b[3];
		for (int i = 0; i < 3; i++)
			cin >> a[i];
		for (int i = 0; i < 3; i++)
			cin >> b[i];
		long long ans = min(a[2], b[1]) * 2;
		a[2] -= ans / 2, b[1] -= ans / 2;
		int t = min(b[2], a[0]);
		b[2] -= t, a[0] -= t;
		t = min(b[2], a[2]);
		b[2] -= t, a[2] -= t;
		ans -= b[2] * 2;
		cout << ans << '\n';
	}
	return 0;
}
