#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		string s;
		cin >> n >> s;
		int cnt = 0;
		int i = n - 1;
		while (i >= 0 && s[i] == ')')
			cnt++, i--;
		if (cnt > n - cnt)
			cout << "Yes\n";
		else
			cout << "No\n";
	}
	return 0;
}
