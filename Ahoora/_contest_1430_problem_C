#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		cin >> n;
		multiset<int> s;
		for (int i = 1; i <= n; i++)
			s.insert(i);
		vector<pair<int, int>> ans;
		while (s.size() > 1) {
			auto it = --s.end();
			auto it1 = --it;
			it++;
			int x = *it, y = *it1;
			s.erase(it), s.erase(it1);
			s.insert((x + y + 1) / 2);
			ans.push_back({x, y});
		}
		cout << *s.begin() << '\n';
		for (auto it: ans)
			cout << it.first << ' ' << it.second << '\n';
	}
	return 0;
}
