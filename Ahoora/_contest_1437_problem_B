#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		string s;
		cin >> n >> s;
		int cnt = 0;
		for (int i = 1; i < n; i++)
			cnt += (s[i] != s[i - 1]);
		cout << (n - cnt) / 2 << '\n';
	}
	return 0;
}
