#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long n, c[2], h;
		string s;
		cin >> n >> c[0] >> c[1] >> h >> s;
		long long cnt[2] = {0, 0};
		for (auto c: s) 
			cnt[c - '0']++;
		long long ans = 1LL << 55;
		for (int i = 0; i <= n; i++) {
			long long cc[2] = {i, n - i};
			long long d = abs(cc[0] - cnt[0])  + abs(cc[1] - cnt[1]);
			d /= 2;
			ans = min(ans, h * d + c[0] * cc[0] + c[1] * cc[1]);
		}
		cout << ans << '\n';
	}
	return 0;
}
