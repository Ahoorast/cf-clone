#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n, k;
		cin >> n >> k;
		vector<int> a(n * k);
		for (int i = 0; i < n * k; i++)
			cin >> a[i];
		long long ans = 0;
		int med = n / 2;
		int ted = k;
		for (int i = n * k - 1; i >= 0; i--) {
			if (med == 0 && ted) {
				ans += a[i];
				med = n / 2;
				ted--;
			} else 
				med--;
		}
		cout << ans << '\n';
	}
	return 0;
}
