#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n, k;
		cin >> n >> k;
		vector<pair<int, int>> p(n);
		for (int i = 0; i < n; i++)
			cin >> p[i].first >> p[i].second;
		bool fnd = false;
		for (int i = 0; i < n; i++) {
			bool res = true;
			for (int j = 0; j < n; j++)
				res &= ((abs(p[j].first - p[i].first) + abs(p[j].second - p[i].second)) <= k);
			fnd |= res;
		}
		cout << (fnd? 1: -1) << '\n';
	}
	return 0;
}
