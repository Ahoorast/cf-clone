#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int x, y;
		cin >> x >> y;
		int ans = 0;
		if (x < y)
			swap(x, y);
		while (x || y) {
			if (x && y) {
				x--, y--;
				ans += 2;
			} else if (x == 1) {
				x--, ans++;
			} else if (x)
				x--, ans += 2;
		}
		cout << ans << '\n';
	}
	return 0;
}
