#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long x;
		cin >> x;
		int i = 1;
		long long s = 0;
		while (s < x) {
			s += i;
			i++;
		}
		if (s == x)
			cout << i - 1 << '\n';
		else if (s > x + 1)
			cout << i - 1 << '\n';
		else
			cout << i << '\n';
	}
	return 0;
}
