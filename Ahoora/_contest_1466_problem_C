#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		string s;
		cin >> s;
		int n = (int)(s.size()), ans = 0;
		vector<bool> mark(n);
		for (int i = 1; i < n; i++)
			if ((s[i] == s[i - 1] && !mark[i - 1]) || (i - 2 >= 0 && s[i] == s[i - 2] && !mark[i - 2])) 
				mark[i] = true, ans++;
		cout << ans << '\n';
	}
	return 0;
}
