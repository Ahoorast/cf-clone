#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		cin >> n;
		int cnt[2] = {0, 0};
		for (int i = 0, a; i < n; i++) {
			cin >> a;
			cnt[--a]++;
		}
		if (cnt[0] & 1)
			cout << "NO\n";
		else {
			bool fnd = false;
			for (int i = 0; i <= cnt[0]; i++) {
				int d = i - (cnt[0] - i);
				if (abs(d) & 1)
					continue;
				if (cnt[1] * 2 < abs(d))
					continue;
				if ((cnt[1] - (abs(d) / 2)) % 2 == 1)
					continue;
				fnd = true;
			}
			cout << (fnd? "YES": "NO") << '\n';
		}
	}
	return 0;
}
