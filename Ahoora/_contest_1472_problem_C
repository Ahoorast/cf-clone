#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		cin >> n;
		vector<long long> dp(n), a(n);
		for (auto &x: a)
			cin >> x;
		for (int i = n - 1; i >= 0; i--) {
			if (i + a[i] >= n)
				dp[i] = a[i];
			else
				dp[i] = a[i] + dp[i + a[i]];
		}
		cout << *max_element(dp.begin(), dp.end()) << '\n';
	}
	return 0;
}
