#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int n;
	cin >> n;
	vector<int> a(n);
	for (auto &x: a)
		cin >> x;
	sort(a.begin(), a.end());
	vector<vector<long long>> dp(n + 1, vector<long long>(n + 1));
	for (int i = n - 1; i >= 0; i--)
		for (int j = i + 1; j < n; j++) 
			dp[i][j] = min(dp[i + 1][j], dp[i][j - 1]) + a[j] - a[i];
	cout << dp[0][n - 1] << '\n';
	return 0;
}
