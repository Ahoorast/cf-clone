#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int o = 0, ans = 0;
	string s;
	cin >> s;
	for (auto c: s) {
		if (o == 0 && c == ')')
			ans++;
		else if (c == ')')
			o--;
		else if (c == '(')
			o++;
	}
	ans += o;
	cout << (int)(s.size()) - ans << '\n';
	return 0;
}
