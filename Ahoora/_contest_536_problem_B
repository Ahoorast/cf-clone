#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int n, m, Q;
	string s;
	cin >> n >> Q >> s;
	m = (int)(s.size());
	vector<int> F(m), d(n, 1 << 30), can(m);
	int len = 0;
	for (int i = 1; i < m; i++) {
		while (len && s[i] != s[len])
			len = F[len - 1];
		F[i] = len += s[i] == s[len];
	}
	while (len) {
		can[len] = true;
		len = F[len - 1];
	}
	int prv = -n - m;
	while (Q--) {
		int x;
		cin >> x;
		--x;
		d[x] = 0;
		if (prv + m > x && !can[prv + m - x]) {
			cerr << prv + m - x << '\n';
			return cout << "0\n", 0;
		}
		prv = x;
	}
	for (int i = 1; i < n; i++)
		d[i] = min(d[i], d[i - 1] + 1);
	int ans = 1, mod = 1e9 + 7;
	for (int i = 0; i < n; i++)
		if (d[i] >= m)
			ans = 1LL * ans * 26 % mod;
	cout << ans << '\n';
	return 0;
}
