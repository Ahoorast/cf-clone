#include <bits/stdc++.h>
using namespace std;
Â 
int main() {
	int n, a, sum[2] = {0, 0}, minodd = 200, cnt = 0;
	cin >> n;
	while(n--) {
		cin >> a;
		sum[a % 2] += a;
		if (a % 2 == 1)
			minodd = min(minodd, a), cnt++;
	}
	if (cnt == 0)
		return cout << '0', 0;
	if (cnt % 2 == 1)
		return cout << sum[0] + sum[1], 0;
	cout << sum[0] + sum[1] - minodd;
	return 0;
}
