*/
#include <bits/stdc++.h>
using namespace std;
#define		debug(x)	cout << #x << '=' << x << endl
#define		print(x, n)	for(int i = 0; i < n; i++) cout << x[i] << ' ';
#define		pb			push_back
#define		sep			' '
 
int main()
{
	ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
	long long n, ans = 0;
	cin >> n;
	if(n % 2 == 1) return cout << "0", 0;
	ans = ((n - 1) / 2);
	if(n % 4 == 0) ans--;
	cout << ans / 2; 
	return 0;
}
