const long long N = 1e9 + 9 * 1e8;
Â 
int main() {
	ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0); 
	unsigned long long sum = 0, odd = 0;
	long long n, minx = N, a;
	cin >> n;
	while (n--) {
		cin >> a;
		sum += a;
		if (a % 2 == 1)
			minx = min(minx, a);
	}
	if (sum % 2 == 1)
		sum -= minx;
	cout << sum;
	return 0;
}
