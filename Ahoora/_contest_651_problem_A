#include <bits/stdc++.h>
using namespace std;
Â 
int main() {
	ios_base::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int a, b, res = 0;
	cin >> a >> b;
	while (a || b) {
		if (a >= b && a - 2 >= 0)
			a -= 2, res++, b++;
		else if (b > a && b - 2 >= 0)
			b -= 2, res++, a++;
		else
			break;
	}
	cout << max(res - 1, 0) << endl;
	return 0;
}
