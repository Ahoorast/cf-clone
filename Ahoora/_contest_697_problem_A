#include <bits/stdc++.h>
using namespace std;
 
const int maxn = 200;
int arr[maxn], b[maxn];
 
int main() {
	ios_base::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	long long a, b, c;
	long long t, x, s;
	cin >> t >> s >> x;
	if (((x - t) % s == 0 || (x - t) % s == 1))
		if (t + s > x && t != x)
			cout << "NO" << endl;
		else
			cout << "YES" << endl;
	else
		cout << "NO" << endl;
	return 0;
}
