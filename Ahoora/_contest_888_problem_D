#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	long long n, K;
	cin >> n >> K;
	long long ans = 1;
	if (K >= 2)
		ans += n * (n - 1) / 2;
	if (K >= 3 && n >= 2)
		ans += 2 * n * (n - 1) * (n - 2) / 6;
	if (K >= 4 && n >= 3)
		ans += n * (n - 1) * (n - 2) * (n - 3) / 24 * 9;
	cout << ans << endl;
	return 0;
}
