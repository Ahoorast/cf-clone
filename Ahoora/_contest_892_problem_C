#include<bits/stdc++.h>
using namespace std;
Â 
const int N = 2020;
int n, a[N], g[N][N];
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	cin >> n;
	int td = 0;
	for (int i = 1; i <= n; i++)
		cin >> a[i], td += a[i] == 1, g[i][i] = a[i];
	if (td)
		return cout << n - td << '\n', 0;
	for (int i = 1; i <= n; i++)
		for (int j = i + 1; j <= n; j++)
			g[i][j] = __gcd(g[i][j - 1], a[j]);
	int l = 0, r = n + 1;
	for (int i = 1; i <= n; i++)
		for (int j = i; j <= n; j++)
			if (g[i][j] == 1 && j - i + 1 < r - l + 1)
				r = j, l = i;
	if (r - l + 1 > n)
		return cout << "-1\n", 0;
	cout << (r - l) + n - 1 << '\n';
	return 0;
}
