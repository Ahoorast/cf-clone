#include <bits/stdc++.h>
using namespace std;
Â 
int main() {
	ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0); 
	int n, res = 0, v, s = 0;
	cin >> n >> v;
	s = n - 1;
	for (int i = 2; i <= n; i++) {
		int t = max(min(s, v), 0);
		res += t * (i - 1);
		s -= t;
		v -= t - 1;
	}
	cout << res << endl;
	return 0;
}
