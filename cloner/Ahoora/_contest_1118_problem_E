#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int n, k;
	cin >> n >> k;
	if (1LL * n > 1LL * k * (k - 1))
		return cout << "NO\n", 0;
	cout << "YES\n";
	int x = 1, y = 2;
	for (int i = 0; i < n; i++) {
		if (i % 2) {
			cout << y << ' ' << x << '\n';
			y++;
			if (y > k)
				x++, y = x + 1;
		} else
			cout << x << ' ' << y << '\n';
	}
	return 0;
}
