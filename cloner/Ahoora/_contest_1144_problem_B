#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int n, s = 0;
	vector<int> vec[2];
	cin >> n;
	for (int i = 0, a; i < n; i++)
		cin >> a, vec[a & 1].push_back(a), s += a;
	for (int i = 0; i < 2; i++)
		sort(vec[i].begin(), vec[i].end(), [] (int x, int y) {return x > y;});
	int sum = 0, sz = min((int)vec[0].size(), (int)vec[1].size());
	for (int i = 0; i < sz; i++)
		sum += vec[0][i] + vec[1][i];
	int mx = 0;
	if (vec[0].size() > sz)
		mx = vec[0][sz];
	if (vec[1].size() > sz)
		mx = vec[1][sz];
	sum += mx;
	cout << s - sum << endl;
	return 0;
}
