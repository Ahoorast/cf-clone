#include <bits/stdc++.h>
using namespace std;
#define		debug(x)	cout << #x << '=' << x << endl
#define		print(x, n)	for(int i = 0; i < n; i++) cout << x[i] << ' ';
#define		pb			push_back
#define		sep			' '
 
int main()
{
	ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
	unsigned long long n, ans = 0;
	cin >> n;
	ans = pow(2, n / 2);
	(n % 2 ? cout << "0" : cout << ans);
	return 0;
}
 
