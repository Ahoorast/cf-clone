#include <bits/stdc++.h>
using namespace std;
 
int n;
 
int main() {
	ios_base::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	cin >> n;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < 2 * n - 2 * i; j++)
			cout << ' ';
		for (int j = 0; j < i; j++)
			cout << j << ' ';
		for (int j = i; j >= 0; j--) {
			cout << j;
			if (j)
				cout << ' ';
		}
		cout << endl;
	}
	for (int i = n; i >= 0; i--) {
		for (int j = 0; j < 2 * n - 2 * i; j++)
			cout << ' ';
		for (int j = 0; j < i; j++)
			cout << j << ' ';
		for (int j = i; j >= 0; j--) {
			cout << j;
			if (j)
				cout << ' ';
		}
		cout << endl;
	}
	return 0;
}
