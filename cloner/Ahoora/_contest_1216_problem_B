#include <bits/stdc++.h>
using namespace std;
Â 
const int maxn = 1100;
int a[maxn], n, index[maxn];
vector<int> ans;
int main() {
	cin >> n;
	for (int i = 0; i < n; i++) 
		cin >> a[i];
	for (int i = 0; i < n; i++) 
		index[i] = i + 1;
	for (int i = 0; i < n; i++) {
		int l, large = 0;
		for (int j = i; j < n; j++) 
			if (large < a[j])
				large = a[j], l = j;
		swap(a[i], a[l]);
		ans.push_back(index[l]);
		swap(index[i], index[l]);
	}
	long long res = 0;
	for (int i = 0; i < n; i++)
		res += i * a[i] + 1;
	cout << res << endl;
	for (int i = 0; i < ans.size(); i++)
		cout << ans[i] << ' ';
	return 0;
}
