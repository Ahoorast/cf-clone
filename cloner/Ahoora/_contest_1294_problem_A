#include <bits/stdc++.h>
using namespace std;
Â 
int main() {
	ios_base::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long n, a, b, c;
		cin >> a >> b >> c >> n;
		long long t = max(max(a, b), c), s = 0;
		s = t - a + t - b + t - c;
		if ((n - s) % 3 == 0 && n - s >= 0)
			cout << "YES" << endl;
		else
			cout << "NO" << endl;
	}
	return 0;
}
