#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long n, m, t, ans;
		cin >> n >> m;
		ans = n * (n + 1) / 2;
		t = (n - m) / (m + 1);
		ans -= t * (m + 1) * (t + 1) / 2;
		ans -= (t + 1) * ((n - m) - t * (m + 1));
		cout << ans << endl;
	}
	return 0;
}
