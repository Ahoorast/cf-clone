#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		string s;
		cin >> s;
		s += 'R';
		int ans = 0, last = 1, n = s.size();
		for (int i = 2; i <= n + 1; i++) 
			if (s[i - 2] == 'R')
				ans = max(ans, i - last), last = i;
		cout << ans << endl;
	}
	return 0;
}
