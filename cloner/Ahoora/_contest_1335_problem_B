#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n, a, b;
		string s;
		cin >> n >> a >> b;
		for (int i = 1; i <= n; i++)
			s += 'a';
		for (int i = 0; i < a - b + 2; i++)
			s[i] = 'a';
		for (int i = a - b + 2; i <= a; i++)
			s[i] = (char)(1 + i - a + b - 2 + 'a');
		for (int i = a + 1; i <= n; i++)
			s[i] = s[i - a];
		for (int i = 1; i <= n; i++)
			cout << s[i];
		cout << endl;
	}
	return 0;
}
