#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long x, y, a, b;
		cin >> x >> y >> a >> b;
		long long ans = 0;
		ans += min(x, y) * min(b, a * 2);
		long long t = min(x, y);
		x -= t, y -= t;
		ans += max(x, y) * a;
		cout << ans << '\n';
	}
	return 0;
}
