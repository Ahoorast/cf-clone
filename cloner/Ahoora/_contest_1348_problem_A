#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		cin >> n;
		long long ans = 1 << n;
		for (int i = 1; i < n / 2; i++)
			ans += 1 << i;
		for (int i = n / 2; i < n; i++)
			ans -= 1 << i;
		cout << ans << '\n';
	}
	return 0;
}
