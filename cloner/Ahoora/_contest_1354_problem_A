#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long a, b, c, d;
		cin >> a >> b >> c >> d;
		long long t = c - d;
		if (b >= a)
			cout << b << '\n';
		else {
			long long d = a - b;
			if (t <= 0)
				cout << -1 << '\n';
			else
				cout << b + (d / t + (d % t != 0)) * c << '\n';
		}
	}
	return 0;
}
