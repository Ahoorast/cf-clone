#include<bits/stdc++.h>
using namespace std;
Â 
const int N = 1000 * 1000 + 100;
long long cnt[N];
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int A, B, C, D;
	cin >> A >> B >> C >> D;
	int lim = B + C;
	cnt[lim]++;
	long long ans = 0;
	for (int i = lim - 1; i >= C; i--) 
		cnt[i] = cnt[i + 1] + (i - B >= B && i - B <= C) - (i + 1 - A >= B && i + 1 - A <= C);
	for (int i = lim - 1; i >= C; i--)
		cnt[i] += cnt[i + 1], ans += (cnt[i + 1] * (i <= D));
	cout << ans << '\n';
	return 0;
}
