#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long x1, y1, x2, y2;
		cin >> x1 >> y1 >> x2 >> y2;
		x2 -= x1, y2 -= y1;
		long long delta = min(x2, y2) * (min(x2, y2) + 1) + (abs(x2 - y2) - 1) * min(x2, y2);
		cout << ++delta << '\n';
	}
	return 0;
}
