#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n, m, k;
		cin >> n >> m >> k;
		int jok = min(m, n / k);
		int sec = (m - jok) / (k - 1) + ((m - jok) % (k - 1) != 0);
		cout << jok - sec << '\n';
	}
	return 0;
}
