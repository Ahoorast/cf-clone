#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int a, b;
		cin >> a >> b;
		int l = 0, r = (a + b) / 3;
		while (l < r) {
			int mid = l + r + 1 >> 1;
			if (a >= mid && b >= mid && a + b - 2 * mid >= mid)
				l = mid;
			else
				r = mid - 1;
		}
		cout << l << '\n';
	}
	return 0;
}
