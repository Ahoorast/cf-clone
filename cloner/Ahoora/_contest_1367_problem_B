#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n, cnt[2] = {0, 0}, td = 0, a, ted[2] = {0, 0};
		cin >> n;
		for (int i = 0; i < n; i++) {
			cnt[i & 1]++;
			cin >> a;
			td += (i % 2 != a % 2);
			ted[a & 1]++;
		}
		if (ted[0] != cnt[0] || ted[1] != cnt[1])
			cout << -1 << '\n';
		else
			cout << td / 2 << '\n';
	}
	return 0;
}
