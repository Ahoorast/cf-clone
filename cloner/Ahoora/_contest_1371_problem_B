#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long n, r;
		cin >> n >> r;
		long long x = min(r, n - 1), ans = 0;
		ans += x * (x + 1) / 2;
		long long cnt = r - x;
		ans += cnt > 0;
		cout << ans << '\n';
	}
	return 0;
}
