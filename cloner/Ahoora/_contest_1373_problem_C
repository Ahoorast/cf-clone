#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		vector<int> ps;
		string s;
		cin >> s;
		int n = s.size(), prv = 0;
		ps.push_back(0);
		for (int i = 0; i < n; i++) {
			prv = prv + (s[i] == '-'? 1: -1);
			ps.push_back(prv);
		}
		ps.push_back(1 << 30);
		map<int, int> mp;
		for (int i = 0; i <= n + 1; i++)
			if (!mp[ps[i]])
				mp[ps[i]] = i;
		long long ans = 0;
		for (int i = 0; i <= n + 1; i++) {
			int x = mp[i + 1];
			if (x == 0 || x > n)
				break;
			ans += x;
		}
		cout << ans + n << '\n';
	}
	return 0;
}
