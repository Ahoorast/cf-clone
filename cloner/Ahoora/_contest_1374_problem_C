#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int ans = 0, sum = 0, n;
		string s;
		cin >> n >> s;
		for (int i = 0; i < n; i++) {
			sum = sum + (s[i] == '('? +1: -1);
			if (sum < 0)
				ans++, sum++;
		}
		cout << ans << '\n';
	}
	return 0;
}
