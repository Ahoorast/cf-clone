#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long x, y, k;
		cin >> x >> y >> k;
		long long t = (y + 1) * k - 1;
		long long ans = t / (x - 1) + (t % (x - 1) != 0);
		cout << ans + k << '\n';
	}
	return 0;
}
