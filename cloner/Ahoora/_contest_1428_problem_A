#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long x1, x2, y1, y2;
		cin >> x1 >> y1 >> x2 >> y2;
		if (x1 == x2 || y1 == y2)
			cout << abs(x1 - x2) + abs(y1 - y2) << '\n';
		else
			cout << abs(x1 - x2) + abs(y1 - y2) + 2 << '\n';
	}
	return 0;
}
