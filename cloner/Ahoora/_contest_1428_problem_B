#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		string s;
		cin >> n >> s;
		int ans = 0;
		int cnt1 = 0, cnt2 = 0;
		for (auto c: s) {
			if (c == '>')
				cnt1++;
			if (c == '<')
				cnt2++;
		}
		if (cnt1 == 0 || cnt2 == 0) 
			cout << n << '\n';
		else {
			for (int i = 0; i < n; i++)
				if (s[i] == '-' || s[((i - 1) % n + n) % n] == '-')
					ans++;
			cout << ans << '\n';
		}
	}
	return 0;
}
