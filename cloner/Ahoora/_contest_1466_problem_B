#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		cin >> n;
		vector<int> cnt(2 * n + 10);
		for (int i = 0, a; i < n; i++) {
			cin >> a;
			cnt[a]++;
		}
		for (int i = 2 * n; i >= 1; i--) {
			while (cnt[i] > 1) 
				cnt[i]--, cnt[i + 1]++;
			if (cnt[i + 1] == 0 && cnt[i] == 1)
				cnt[i + 1] = 1, cnt[i] = 0;
		}
		int ans = 0;
		for (int i = 1; i < 2 * n + 10; i++)
			ans += (cnt[i] > 0);
		cout << ans << '\n';
	}
	return 0;
}
