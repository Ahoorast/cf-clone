#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		cin >> n;
		vector<long long> c(n), a(n), b(n);
		for (int i = 0; i < n; i++)
			cin >> c[i];
		for (int i = 0; i < n; i++) 
			cin >> a[i];
		for (int i = 0; i < n; i++)
			cin >> b[i];
		vector<long long> dp(n);
		fill(dp.begin(), dp.end(), -1 * (1LL << 60));
		for (int i = 1; i < n; i++) {
			if (a[i] == -1)
				continue;
			if (b[i] == -1)
				continue;
			if (a[i] == b[i])
				dp[i] = max(dp[i], 2LL);
			else {
				dp[i] = max(dp[i], 2LL + dp[i - 1] + c[i - 1] - abs(a[i] - b[i]) - 1);
				dp[i] = max(dp[i], 2LL + abs(a[i] - b[i]));
			}
		}
		long long ans = 0;
		for (int i = 0; i < n; i++)
			ans = max(ans, dp[i] + c[i] - 1);
		cout << (ans > 0? ans: -1) << '\n';
	}
	return 0;
}
