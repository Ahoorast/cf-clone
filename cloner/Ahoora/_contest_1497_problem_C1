#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		long long n, k;
		cin >> n >> k;
		if (n % 4 == 0) {
			if (n > 4)
				cout << n / 4 << ' ' << n / 4 << ' ' << n / 2 << '\n';
			else
				cout << "1 1 2\n";
		} else if (n & 1)
			cout << 1 << ' ' << (n - 1) / 2 << ' ' << (n - 1) / 2 << '\n';
		else
			cout << 2 << ' ' << (n - 2) / 2 << ' ' << (n - 2) / 2 << '\n';
	}
	return 0;
}
