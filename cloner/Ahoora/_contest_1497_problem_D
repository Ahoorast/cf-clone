#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	int Q;
	cin >> Q;
	while (Q--) {
		int n;
		cin >> n;
		vector<int> t(n), s(n);
		for (auto &x: t)
			cin >> x;
		for (auto &x: s)
			cin >> x;
		vector<long long> dp(n);
		for (int v = 0; v < n; v++)
			for (int u = v - 1; u >= 0; u--) 
				if (t[v] != t[u]) {
					long long x = dp[v], y = dp[u], sc = abs(s[v] - s[u]);
					dp[v] = max(dp[v], y + sc);
					dp[u] = max(dp[u], x + sc);
				}
		cout << *max_element(dp.begin(), dp.end()) << '\n';
	}
	return 0;
}
