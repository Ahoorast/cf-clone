#include<bits/stdc++.h>
using namespace std;
Â 
int main() { 
	int n;
	cin >> n;
	vector<pair<int, int>> vec[2];
	for (int i = 0; i < n; i++)
		for (int j = 0; j < n; j++)
			vec[(i + j) % 2].push_back({i, j});
	while (true) {
		int a;
		cin >> a;
		if (a != 1) {
			if (vec[0].empty()) {
				int b = (a == 2? 3: 2);
				pair<int, int> p = vec[1].back();
				cout << b << ' ' << ++p.first << ' ' << ++p.second << endl;
				vec[1].pop_back();
			} else {
				int b = 1;
				pair<int, int> p = vec[0].back();
				cout << b << ' ' << ++p.first << ' ' << ++p.second << endl;
				vec[0].pop_back();
			}
		} else {
			if (vec[1].empty()) {
				int b = 3;
				pair<int, int> p = vec[0].back();
				cout << b << ' ' << ++p.first << ' ' << ++p.second << endl;
				vec[0].pop_back();
			} else {
				int b = 2;
				pair<int, int> p = vec[1].back();
				cout << b << ' ' << ++p.first << ' ' << ++p.second << endl;
				vec[1].pop_back();
			}
		}
		if (vec[0].empty() && vec[1].empty()) {
			return 0;
		}
	}
	return 0;
}
