#include <iostream>
using namespace std;
int main()
{
	int n, ans = 0;
	string a;
	cin >> n;
	for(int i = 0; i < n; i++)
	{
		cin >> a;
		if(a[0] == 'X')
		{
			if(a[1] == '-')
			ans--;
			else
			ans++;
		}
		else
		{
			if(a[0] == '-')
			ans--;
			else
			ans++;
		}
	}
	cout << ans;
	return 0;
}
