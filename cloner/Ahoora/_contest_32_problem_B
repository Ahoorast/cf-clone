#include <bits/stdc++.h>
using namespace std;
Â 
int main()
{
	string s;
	cin >> s;
	int sz = s.size(), l = 0;
	for(int i = 0; i < sz; i++) {
		if(s[i] == '.') {
			cout << '0';
			l = i + 1;
		}
		if(s[i] == '-') {
			if(s[i + 1] == '.') cout << '1';
			else if(s[i + 1] == '-') cout << '2';
			l = i + 2;
		}
		if(l > sz - 1) break;
		i = l - 1;
	}					
	return 0;
}
