#include<bits/stdc++.h>
using namespace std;
Â 
const int N = 1000 * 100 + 10;
int a[N], n;
Â 
int main() { 
	ios::sync_with_stdio(false), cin.tie(0), cout.tie(0);
	cin >> n;
	for (int i = 1; i <= n; i++)
		cin >> a[i];
	vector<int> lis;
	int l = 0;
	lis.push_back(a[1]);
	for (int i = 2; i <= n; i++) {
		if (a[i] < lis[0])
			lis[0] = a[i];
		else if (a[i] >= lis[l])
			l++, lis.push_back(a[i]);
		else
			lis[upper_bound(lis.begin(), lis.end(), a[i]) - lis.begin()] = a[i];
	}
	cout << lis.size() << endl;
	return 0;
}
