#include <bits/stdc++.h>
using namespace std;
Â 
int main() {
	ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
	int n, res = 1100, cnt = 0;
	string s;
	cin >> n >> s;
	for (int i = 0; i < n; i++)
		if ((s[i] - '0') % 2 != i % 2)
			cnt++;
	res = min(res, cnt);
	cnt = 0;
	for (int i = 0; i < n; i++)
		if((s[i] - '0') % 2 == i % 2)
			cnt++;
	res = min(res, cnt);
	cout << res << endl;
	return 0;
}
