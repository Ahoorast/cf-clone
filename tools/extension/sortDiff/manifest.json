{
    "manifest_version": 3,
    "name": "Tab Sorter",
    "version": "1.0",
    "permissions": ["scripting", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
